<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvBemVindos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem vindos ao App Lantra" />

    <Button
        android:id="@+id/btEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="irTela2"
        android:text="Entrar"
        app:layout_constraintTop_toBottomOf="@id/tvBemVindos" />

    <Button
        android:id="@+id/btSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair do app"
        app:layout_constraintLeft_toRightOf="@id/btEntrar"
        android:onClick="sairApp" />

</androidx.constraintlayout.widget.ConstraintLayout>