<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ã‰ NOIS NO ANDROID!"
            android:textColor="#2b1b89"
            android:id="@+id/tvInicio"
           />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Clica nimin"
    app:layout_constraintTop_toBottomOf="@id/tvInicio"
    android:onClick="cliqueLoko"
    android:id="@+id/btLoko"
    />

    <TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sou invejoso!"
    app:layout_constraintTop_toBottomOf="@id/btLoko"
    android:textSize="30sp"
    android:id="@+id/tvInvejoso"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite algo"
        app:layout_constraintTop_toBottomOf="@id/tvInvejoso"
        android:id="@+id/etFrase"
        android:inputType="number"
    />

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seja discreto!"
    app:layout_constraintTop_toBottomOf="@id/etFrase"
    android:onClick="mensagemAlerta"/>

</android.support.constraint.ConstraintLayout>